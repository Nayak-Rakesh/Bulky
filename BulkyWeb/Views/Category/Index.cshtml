@model List<Category>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h1>Category List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i>Create new category
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u=> u.Id))
        {
            <tr>
                <td>
                    Name
                </td>
                <td>
                    DisplayOrder
                </td>
            </tr>
        }
    </tbody>
</table>
